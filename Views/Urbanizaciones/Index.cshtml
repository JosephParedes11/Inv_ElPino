@model IEnumerable<GestionContratos.Models.UrbanizacionModel>

@{
    ViewData["Title"] = "Urbanizaciones";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper"
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                         <div class="card-header">
                            <div class="row">
                                <div class="col-6">
                                    <h2 class="m-0">Urbanizaciones</h2>
                                </div>
                                <div class="col-6 d-flex justify-content-end">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Urbanizacion" asp-action="Create">
                                        Nueva Urbanización
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Departamento</th>
                                        <th>Provincia</th>
                                        <th>Distrito</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Nombre</td>
                                            <td>@item.Departamento</td>
                                            <td>@item.Provincia</td>
                                            <td>@item.Distrito</td>
                                            <td>
                                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.UrbanizacionID">Editar</a>
                                                <a class="btn btn-danger text-white  delete-dialog-window"  data-empresa="@item.UrbanizacionID">Eliminar</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


