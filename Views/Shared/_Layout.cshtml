    @await RenderSectionAsync("Scripts", required: false)


    <script>
        $(document).ready(function () {
            $('#clienteSelect, #empresaSelect, #loteSelect').select2({
                placeholder: "[Seleccione]",
                allowClear: true,
                language: {
                    noResults: function () {
                        return "No hay resultados";
                    },
                    searching: function () {
                        return "Buscando...";
                    }
                }
            });

            var lotes = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Lotes));

            $('#loteSelect').change(function () {
                var selectedLoteID = $(this).val();
                var selectedLote = lotes.find(lote => lote.LoteID == selectedLoteID);
                var igv = selectedLote.MontoTotal - (selectedLote.MontoTotal / 1.18);
                console.log(selectedLote)
                if (selectedLote) {
                    $('#montoTotal').val(selectedLote.MontoTotal);
                    $('#Igv').val(igv);
                } else {
                    $('#montoTotal').val('0.00');
                    $('#Igv').val('0.00');
                }
            });
        });

        $(function () {
            $('#example2').DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": false,
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>
